<resources>

    <!-- App bar styles -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Small text size styles -->
    <style name="SmallTitleText">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="SmallBodyText">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SmallTailText">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Medium text size styles -->
    <style name="MediumTitleText">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="MediumBodyText">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="MediumTailText">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Large text size styles -->
    <style name="LargeTitleText">
        <item name="android:textSize">34sp</item>
    </style>
    <style name="LargeBodyText">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="LargeTailText">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
